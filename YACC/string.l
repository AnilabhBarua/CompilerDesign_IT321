%{
#include <stdio.h>
#include "y.tab.h"  // Include the header generated by Bison (YACC) for token definitions
%}

%%
'int'   { return type; }
'float' { return type; }
[a-zA-Z][a-zA-Z0-9]* { return ID; }  // Match identifiers (variable names)

[\t] ;  // Ignore tabs
. { return yytext[0]; }  // Return the character as a token (for unrecognized characters)
[\n] { return 0; }  // Return 0 (end of input)

%%

int yywrap() {
    return 1;  // Return 1 to indicate the end of input
}
